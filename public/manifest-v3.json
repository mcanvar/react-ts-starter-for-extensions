{
  "manifest_version": 3,

  "name": "React TS starter for browser extensions",
  "description": "Chrome Extension, TypeScript, React",
  "version": "1.0.0",

  "background": {
    "service_worker": "js/background.js"
  },

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
